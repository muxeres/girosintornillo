def gerar_markdown(dados):
    md = "## Grupos de Solu√ß√µes\n\n"
    
    # Parte esquerda - Acesso
    md += "### üîë Acesso\n"
    for k, v in dados["Acesso"].items():
        simbolo = "‚úÖ" if v else "‚ùå"
        md += f"- {simbolo} {k}\n"
    
    md += "\n"
    
    # Parte direita - Fluxo de Caixa
    md += "### üí∞ Fluxo de Caixa\n"
    for k, v in dados["Fluxo de Caixa"].items():
        md += f"- **{k}:** {v}\n"
    
    return md

# Gerar markdown formatado
markdown_texto = gerar_markdown(dados)

from IPython.display import Markdown
Markdown(markdown_texto)